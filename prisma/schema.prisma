datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model TestParent {
  id       Int         @id @default(autoincrement())
  email    String      @unique
  name     String?
  emoji    String?     @default("üêµ")
  children TestChild[]
}

model TestChild {
  id        Int         @id @default(autoincrement())
  title     String
  content   String?
  published Boolean?    @default(false)
  parent    TestParent? @relation(fields: [parentId], references: [id])
  parentId  Int?
}
